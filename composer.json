{
    "name": "daaner/turbosms",
    "description": "TurboSMS for Laravel 7+",
    "keywords": [
        "daaner",
        "turbosms",
        "sms",
        "laravel-sms"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Daan",
            "email": "daan@ukr.net"
        }
    ],
    "require": {
        "php": ">=7.2.5",
        "laravel/framework": ">=7.0"
    },
    "autoload": {
        "psr-4": {
            "Daaner\\TurboSMS\\Facades\\": "src/Facades",
            "Daaner\\TurboSMS\\": "src",
            "Daaner\\TurboSMS\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "orchestra/testbench": "^4.10 || ^5.9 || ^6.4 || ^7.0",
        "mockery/mockery": ">1.0",
        "phpunit/phpunit": ">8.0"
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "phpunit --coverage-text --coverage-clover=coverage.clover"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Daaner\\TurboSMS\\TurboSMSServiceProvider"
            ],
            "aliases": {
                "TurboSMS": "Daaner\\TurboSMS\\Facades\\TurboSMS"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
